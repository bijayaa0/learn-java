import java.util.Random;
import java.util.Scanner;
public class Basic05_GuessNumberGame {
    public static void main(String[] args) {
        Random random = new Random();
        Scanner scanner = new Scanner(System.in);
        int number1;
        int number2;
        int numguess;
        int guess;
        int rnum;
        boolean correct = false;

        System.out.println("Enter the minimum and maximum numbers for the guessing range:");
        System.out.print("Enter the starting number (minimum): ");
        number1 = scanner.nextInt();

        System.out.print("Enter the ending number (maximum): ");
        number2 = scanner.nextInt();

        System.out.print("Enter the total number of guesses allowed:");
        numguess = scanner.nextInt();

        System.out.println("\nGuess the number between : "+ number1 +" and "+number2);
        System.out.println("The total number of guesses allowed: "+numguess);
        rnum = random.nextInt(number1,number2);


        while( numguess > 0 ){
            System.out.print("Guess the number: ");
            guess = scanner.nextInt();
            if(guess == rnum){
                System.out.println("\nCongratulations! Your guess is correct. You won the game.");
                correct = true;
                break;
            }
            else if(number2 > 5 && guess < rnum  ){
                System.out.println("\nWrong guess. Try a higher number.");
            }
            else if (number2 > 5 && guess > rnum ) {
                System.out.println("\nWrong guess. Try a lower number.");

            }
            else {
                System.out.println("Wrong guess. Try again. :");
            }
            numguess--;
        System.out.println("Remaining attempts: "+numguess);

        }

        if(!correct){

                System.out.println("\n\nThe correct number is: "+rnum+"\n GameOver!");
        }




scanner.close();
    }
}
